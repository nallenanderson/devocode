<section>
  <div class="col-md-8 col-md-offset-2">
  	<div id="blogs">
      <div class="heading">
        <h4>BLOG FOR QUICK LEARNING</h4>
      </div>
  		<div class="blog" style="border-bottom: none;">
        <h2><%= link_to @blog.title, @blog %></h2>
        <ul class="blogDetails list-inline list-unstyled">
          <li><i class="fa fa-user"></i> <%= @blog.author %></li>
          <li><i class="fa fa-calendar"></i> <%= @blog.created_at %></li>
          <li><i class="fa fa-comment-o"></i> Comments</li>
        </ul>
        <%= raw(@blog.body) %>
        <hr>
        <div class="row">
        	<div class="col-sm-2">
  		      <img src="../assets/nate.jpg" alt="Nathan Allen Image" class="img-responsive rounded">
  		     </div>
  		     <div class="col-sm-10">
  		      <div class="row">
              <div class="col-xs-6">
  		          <h3><%= @blog.author %></h3>
              </div>
  		        <div class="col-xs-6" style="text-align: right;">
    		        <span class="fa-stack fa-lg text-center">
    						  <i class="fa fa-square-o fa-stack-2x"></i>
    						  <i class="fa fa-twitter fa-stack-1x"></i>
    						</span>
    						<span class="fa-stack fa-lg text-center">
    						  <i class="fa fa-square-o fa-stack-2x"></i>
    						  <i class="fa fa-github fa-stack-1x"></i>
    						</span>
    						<span class="fa-stack fa-lg text-center">
    						  <i class="fa fa-square-o fa-stack-2x"></i>
    						  <i class="fa fa-envelope fa-stack-1x"></i>
    						</span>
              </div>
            </div>
  						
  		        <p class="author">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
  		        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.</p>
  		      
  		     </div>
        </div>
        <hr>

        <div id="disqus_thread"></div>

        <% if user_signed_in? && current_user.admin == true %>
          <%= link_to 'Show', @blog, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-info" %>
          <%= link_to 'Destroy', @blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <% end %>
      </div>

  	</div>
  </div>
</section>

<script type="text/javascript">
  /* * * CONFIGURATION VARIABLES * * */
  var disqus_shortname = 'natemodyo';
  
  /* * * DON'T EDIT BELOW THIS LINE * * */
  (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
  })();
</script>
