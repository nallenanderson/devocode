<section>
  <div class="col-md-8 col-md-offset-2">
    <select id="blogs">
      <option value='ALL' selected="selected">Todos</option>
      <option value="Rails">Rails</option>
      <option value="HTML">HTML</option>
      <option value="JS">Javascript</option>
      <option value="CSS">CSS</option>
    </select>
    <div id="blogs">
      <div class="heading">
        <h4>BLOG FOR QUICK LEARNING</h4>
      </div>
    
      <% @blogs.each do |blog| %>
        <div class="blog">
          <h2><%= link_to blog.title, blog %></h2>
          <p>
            <%= blog.stdesc.truncate(200) %>
          </p>
          <p>
            <%= link_to "Read more", blog %>
          </p>
          
          <ul class="blogDetails list-inline list-unstyled">
            <li><i class="fa fa-user"></i> <%= blog.author %></li>
            <li><i class="fa fa-calendar"></i> <%= blog.created_at %></li>
            <li><i class="fa fa-comment-o"></i> Comments</li>
          </ul>
          <% if user_signed_in? && current_user.admin == true %>
            <%= link_to 'Show', blog, class: "btn btn-default" %>
            <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-info" %>
            <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          <% end %>
          <span class="spec"><%= blog.category %></span>
        </div>
      <% end %>
    </div>
    <% if user_signed_in? && current_user.admin == true %>
        <%= link_to 'New Blog', new_blog_path, class: "btn btn-info btn-lg" %>
      <% end %>
  </div>
</section>