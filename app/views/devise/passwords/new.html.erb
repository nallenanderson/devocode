<section>
	<div class="col-md-6 col-md-offset-3">
	  
		<h1 class="text-center">Forgot your password?</h1>
		
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>
			
			<p class="lead">It happens to the best of us. Just enter your email and we'll send you instructions for setting up a new password.</p>
		  <div class="form-group">
		    <%= f.label :email %>
		    <%= f.email_field :email, autofocus: true, class: "form-control" %>
		  </div>

		  <div class="form-group">
		    <%= f.submit "Send instructions", class: "btn btn-info btn-lg btn-block" %>
		    <p class="lead text-center">Nevermind. <%= link_to "Got back to login.", new_user_session_path %></p>
		  </div>

		<% end %>

	</div>
</section>
