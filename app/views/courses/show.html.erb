<section class="main">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<p><%= @course.title%></p>
			</div>
		</div>
	</div>
</section>

<section class="courses">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<p class="lead"><%= raw(@course.sales_message) %></p>
			</div>
		</div>
	</div>
</section>

<section id="course-description">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<h1><%= @course.name %></h1>
				<p class="lead"><%= @course.description %></p>
				<!-- <%= image_tag @course.image.url(:medium) %> -->
			</div>

			<div class="clearfix"></div><hr />

			<div class="col-md-8 col-md-offset-2">
				<div class="row">
					<%= raw(@course.characteristics) %>
				</div>
			</div>

			<div class="clearfix"></div><hr>

			<div class="col-md-8 col-md-offset-2">
					<div class="row">
						<h2>¿Qué dicen nuestros estudiantes?</h2>
						<%= raw(@course.testimonial) %>
					</div>
			</div>

		</div>
	</div>
</section>

<section id="sign-up">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="row">
					<div class="col-sm-7">
						<h2>Aprende ahora!</h2>
					</div>
					<div class="col-sm-5">
						<%= link_to "Empezar Right Now!", course_path, class: "btn btn-lg btn-block" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<% if user_signed_in? && current_user.admin == true %>
	<div class="container">
		<div class="row">
			<div class="col-md-9 col-md-offset-2">
				<%= link_to "Edit", edit_course_path(@course), class: "btn btn-lg btn-info" %>
			</div>
		</div>
	</div>
<% end %>

<script>
	$('.main').css('min-height',$(window).height()-50);
</script>