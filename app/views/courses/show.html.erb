<section>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<h1><%= @course.name %></h1>
				<p class="lead"><%= @course.description %></p>
				<%= image_tag @course.image.url(:medium) %>

				<% if user_signed_in? && current_user.admin == true %>
					<%= link_to "Back", courses_path, class: "btn btn-lg btn-danger" %>
